@* Vehicle Service Details *@
<div class="panel panel-success" id="PanelContent">
    @* heading *@
    <div class="panel-heading">
        <h3 class="panel-title" style="color:black;">
            <i class="fas fa-wrench"></i> &nbsp;
            <b>Vehicle Service Details </b>
        </h3>
    </div>
    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <th class="table-heading">
                    <span class="table-heading">@Html.DisplayNameFor(model => model.VehicleServices.First().VehicleService_Date)</span>
                </th>
                <th class="table-heading">
                    <span class="table-heading">@Html.DisplayNameFor(model => model.VehicleServices.First().VehicleService_Cost)</span>
                </th>
                <th class="table-heading">
                    <span class="table-heading">@Html.DisplayNameFor(model => model.VehicleServices.First().VehicleServiceRecord)</span>
                </th>
                <th class="table-heading">
                    <span class="table-heading">@Html.DisplayNameFor(model => model.VehicleServices.First().Unit)</span>
                </th>

                <th class="table-heading">
                    <span class="table-heading">@Html.DisplayName("Actions")</span>
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.VehicleServices)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleService_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleService_Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleServiceRecord)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit.UnitDescr)
                </td>
                <td>
                    <a href="@Url.Action("Details", "VehicleService", new { id = item.VehicleServiceID })" data-toggle="tooltip" title="Details">
                        <i class="glyphicon glyphicon-eye-open" id="ActionIcon"></i>
                        <span class="sr-only">Details</span>
                    </a>
                    <a href="@Url.Action("Edit","VehicleService", new { id = item.VehicleServiceID })" data-toggle="tooltip" title="Update Vehicle Service Details">
                        <i class="glyphicon glyphicon-wrench" id="ActionIcon"></i>
                        <span class="sr-only">Edit</span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>

