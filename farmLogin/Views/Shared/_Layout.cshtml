<!DOCTYPE html>

<style>
    #Footer{
        margin-top: -10px;
        width: 10%;
        margin-left: 46%;
    }
</style>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="~/Images/favicon.ico" type="image/x-icon" />
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container body-content" style="max-width: 900px; min-width:900px">
        @RenderBody()
        <hr id="greenHR"/>
        <hr id="blueHR" />
        <footer>
            <img id="Footer" src="~/Images/Aliferous Logo - Transparent.png">
            @*<p>&copy; @DateTime.Now.Year - FarmIT Prototype</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>