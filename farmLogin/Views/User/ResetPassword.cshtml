@model farmLogin.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
}


<style>
    .navbar {
        margin-top: -800px;
        margin-bottom: 800px;
    }

    body {
        background-color: #87CEFA;
        overflow: hidden;
    }

    .panel {
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.5);
    }

    #PanelContent {
        color: black;
        /*margin-left: 10px;*/
    }


    .panel-success {
        color: green;
    }

    .btn {
        font-weight: 600;
        background-color: #47A447;
        font-family: Arial;
        font-size: 14px;
        display: inline-block;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.5);
        width: 100px;
        border-radius: 5%;
    }

        .btn:hover {
            background-color: #25820F;
            transition: 0.5s;
        }

    #btnBack {
        left: -10px;
        margin-bottom: 1000px;
    }

    #btnSave {
        right: -10px;
    }

    .panel > .panel-heading {
        background-image: none;
        background-color: #d8d8d8;
    }

    .newPass {
        position: absolute;
        left: 195px;
    }

    .confirmPass {
        position: absolute;
        left: 195px;
    }

    .succeed {
        position: absolute;
        top: 200px;
        left: 445px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="text-danger succeed">
        @ViewBag.Message
    </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="panel panel-success" style="margin-bottom: 800px;">
            <div class="panel-heading">
                <h3 class="panel-title" style="color:black;"><b><span class="glyphicon glyphicon-wrench"></span> &nbsp; Reset Password</b></h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="row" id="PanelContent" style="margin-bottom: 10px;">
                        <div class="col-xs-6 col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-4">New Password</label>
                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="newPass">
                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" id="PanelContent" style="margin-bottom:10px;">
                        <div class="col-xs-6 col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-4">Confirm Password</label>
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="confirmPass">
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button class="btn btn-success" type="submit" id="btnSave" style="float: left; margin-left: 185px;">
                                    <span class="glyphicon glyphicon-save"></span>
                                    Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.ResetCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ResetCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ResetCode, "", new { @class = "text-danger" })
                </div>*@
            @Html.HiddenFor(a => a.ResetCode)
        </div>

        <div class="row">
            <div class="input-group">
                <div class="input-group-btn">
                    <button class="btn btn-success" type="submit" id="btnSave" style="float: left; margin-left: 185px;">
                        <span class="glyphicon glyphicon-save"></span>
                        Save
                    </button>
                </div>
            </div>
        </div>
}

@section Scripts {
}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
        @if(TempData["yay"]!= null) { <text>
        $(window).load(function () {
            $(document).ready(function () {
                swal({
                    icon: "success",
                    title: "Success!",
                    text: "Your new password has successfully been set!",
                    type: "warning"
                }).then(function () {
                    window.location = "/User/Login";
                });
            });
        }); </text>
}
</script>
}

