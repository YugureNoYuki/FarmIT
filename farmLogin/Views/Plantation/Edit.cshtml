@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PlantationID)
    @Html.HiddenFor(model => model.CropCycleID)
    @Html.HiddenFor(model => model.FieldStageID)
    @Html.HiddenFor(model => model.DateHarvested)

    //Field / Crop Type / Excepted Yield Panel
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title" style="color:black;"><b><span class="glyphicon glyphicon-calendar"></span> &nbsp;Update Plantation Plan Details</b></h3>
        </div>
        <div style="color: red">
            @if (@ViewBag.Error != null)
                {
                <label><br />&nbsp;&nbsp; @ViewBag.Error <br /></label>
            }
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="row" id="PanelContent">
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.FieldID, "Field", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownList("FieldID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FieldID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.CropTypeID, "CropType", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownList("CropTypeID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CropTypeID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row" id="PanelContent">
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.ExpectedYieldQnty, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ExpectedYieldQnty, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ExpectedYieldQnty, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.YieldUnit, "Expected Yield Unit", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownList("YieldUnit", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.YieldUnit, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row" id="PanelContent">
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.DatePlanted, "Date to Plant", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.DatePlanted, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.EditorFor(model => model.DatePlanted, new { htmlAttributes = new { Value = Model.DatePlanted.ToString("yyyy/MM/dd"), @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                                @Html.ValidationMessageFor(model => model.DatePlanted, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="confirm-submit" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" aria-hidden="true" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" style="color:black">Confirmation</h4>
                    </div>
                    <div class="modal-body" style="color:black">
                        <p>Please confirm that you want to save these updated details.</p>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" style="float:right" id="Confirm">CONFIRM</button>
                        <button type="button" class="btn btn-warning" data-dismiss="modal" style="float: left" id="Cancel">CANCEL</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    //Field / Crop Type / Excepted Yield Panel
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title" style="color:black;"><b><span class="fas fa-flask"></span> &nbsp;Update Refuge Details for Plantation Plan</b></h3>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="row" id="PanelContent">
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.RefugeSeedAmntUsed, "Refuge Area Seed Amnt", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RefugeSeedAmntUsed, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RefugeSeedAmntUsed, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.RefugeUnit, "RefugeUnit", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownList("RefugeUnit", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RefugeUnit, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row" id="PanelContent">
                    <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <div class="col-xs-6 col-md-6">
                                @Html.LabelFor(model => model.RefugeAreaHectares, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RefugeAreaHectares, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RefugeAreaHectares, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

        <div class="input-group">
            <div class="input-group-btn">
                <button class="btn btn-success" type="button" id="btnSave" data-toggle="modal" data-target="#confirm-submit">
                    <span class="glyphicon glyphicon-save"></span>
                    Save
                </button>
            </div>
        </div>

}

